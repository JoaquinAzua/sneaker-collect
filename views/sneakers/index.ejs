<%- include('../partials/header') %>

<style>
  td {
    text-align: center;
  }
</style>

<div class="most-popular">
  <table style="font-size: 25px" class="table table-borderless">
    <thead>
      <tr>
        <br />
        <h1 style="text-align: center">Most Popular</h1>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(function(p) { %>
      <tr>
        <td>
          <img
            style="height: 60px"
            class="rounded float-start"
            src="<%= p.thumbnail %>"
          />
        </td>
        <td><%= p.shoeName %><br /><%= p.releaseDate %></td>
        <td>
          <a
            class="btn btn-outline-dark"
            href="/owned/<%= p.styleID %>"
            style="font-size: 15px"
            >Add to Owned</a
          >
        </td>
        <td>
          <a
            class="btn btn-outline-dark"
            href="/watchlist/<%= p.styleID %>"
            style="font-size: 15px"
            >Add to Wishlist</a
          >
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>


<%- include('../partials/footer') %>

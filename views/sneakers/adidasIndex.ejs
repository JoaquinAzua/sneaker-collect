<%- include('../partials/header') %>

<style>
  td {
    text-align: center;
  }
</style>

<div class="adidas">
  <table style="font-size: 25px" class="table table-borderless">
    <thead>
      <tr>
        <br />
        <h1 style="text-align: center">ADIDAS Sneakers</h1>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% adidas.forEach(function(a) { %>
      <tr>
        <td>
          <img
            style="height: 60px"
            class="rounded float-start"
            src="<%= a.thumbnail %>"
          />
        </td>
        <td><%= a.shoeName %><br /><%= a.releaseDate %></td>
        <td>
          <a
            class="btn btn-outline-dark"
            href="/owned/<%= a.styleID %>"
            style="font-size: 15px"
            >Add to Owned Collection</a
          >
        </td>
        <td>
          <a
            class="btn btn-outline-dark"
            href="/watchlist/<%= a.styleID %>"
            style="font-size: 15px"
            >Add to Wishlist</a
          >
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>


<%- include('../partials/footer') %>